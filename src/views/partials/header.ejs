              <h3><a href="/users/profile"><%= userLogin.firstName %></a></h3>
            
        
                <h3><a href="/users/logout">Salir</a></h3>
        
            <% if (userLogin.rol === "admin") { %>
                
                    <a href="/products/add">Agregar</a>
                    
            <% } %>
        <% }else{ %>
            <a href="/users/login"> 
                <h3>Logueate! <i class="fa-solid fa-user-shield"></i></h3>
            </a>
