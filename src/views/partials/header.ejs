<header class="header">

    <div class="ingreso_registro">


        <ul class="home__header__nav--user">
            <% if (locals.userLogin) { %>
                <li >
                    <a href="/users/login"><%= userLogin.firstName %><i class="fa-solid fa-id-card"></i></a>
                    <hr>
                </li>
                <li>
                    <a href="/users/logout">Salir</a>
                    <hr>
                </li>
                <% if (userLogin.rol === "admin") { %>
                    <li>
                        <a href="/products/add">Agregar</a>
                        <hr>
                    </li>
                <% } %>
            <% }else{ %>
            <li>
                <a href="/users/login">
                    <h3>Logueate! <i class="fa-solid fa-user-shield"></i></h3>
                </a>
            </li>
            <li>
                <a href="/users/register">
                    <h3>Registrate! <i class="fa-solid fa-id-card"></i></h3>
                </a>
            </li>
            <% } %>
        </ul>

       
            
        
      
        
    </div>
    <section class="header__section">
        <article class="header__article">
            <div class="header__user">

                <div class="cart_icon">
                    <a href="/products/shopping-cart">


                        <i class="fa-solid fa-cart-plus"></i></a>
                </div>


            </div>
            <form action="/products/search" class="header__search" method="GET">
                <input class="shopping__header__button" type="text" name="keywords"
                    value="" placeholder="Buscar productos, marcas y mÃ¡s ..">
            </form>
            <div>
                <li class="header__agregar"><a href="/products/add"> <h3>Agregar</h3> </a></li>
            </div>
        </article>
        <div class="burger-menu">
            <button class="burger-button"><i class="fa-solid fa-bars"></i></button>
        </div>

</header>