<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head')  %>

<body>
 
        <%- include('./partials/header')  %>
    

    <main class="home_main_register">

        <section class="register_main_section">
            
        
            <h1 class="form_title">Agregar producto</h1>
    
    
            <form action="" class="form" enctype="multipart/form-data" method="POST">
    

                
            <div class="form_box">
                <label class="form_label" for="name">Nombre del producto:</label>
                <input class="form_input" type="text" id="name" name="name">
                <small class="form_text_error"><%= locals.errors && errors.name? errors.name.msg :null %></small>
            </div>
            <div class="form_box">
                <label for="brand_id"> Marcas </label>
                <select name="brand_id" id="brand_id" required>
                    <option value="" disabled selected>Seleccione la marca</option>
                    <% brands.forEach(brands => {  %>
                     <option value="<%=brands.id%>"> <%=brands.name%> </option>
                     <% }) %>
            </div>
        </select>
            <div class="form_box">
                <label for="price" class="form_label">Precio:</label>
                <input type="number" id="price" name="price" placeholder="Ej: 5678" class="form_input">

                
            </div>
            <div class="form_box">
                <label class="form_label" for="discount">Descuento:</label>
                <input class="form_input" type="number" id="discount" name="discount">
                <small class="form_text_error"><%= locals.discount && errors.discount? errors.name.msg :null %></small>
            </div>
            <div class="form_box">
                <input type="file" name="imageupload" accept="image/png, .jpeg, .jpg, image/gif" multiple>

            </div>
            <div class="form_box">
                <label class="form_label" for="categories_id">Seleccione una categoria:</label>
                <select name="categories_id" id="categories_id" required>
                    <option value="" disabled selected> seleccione ..</option>    
                    <% categories.forEach((categories) => {  %>
                        <option value="<%= categories.id%>"><%=categories.name %></option>
                        <% }) %>
                </select>   
            </div>
            <div class="form_box">
                <label class="form_label" for="description">Descripci√≥n:</label>
                <input class="form_input" type="text" id="description" name="description" value="">
                <small class="form_text_error"><%= locals.discount && errors.discount? errors.name.msg :null %></small>
            </div>
            
               <div class="form_box">
                <button><a href="/">Cancelar</a></button>
                <button type="submit">Guardar</button>
               </div>
            </form>
         
    </section>
                
        </main >

    <footer></footer>

</body>

</html>