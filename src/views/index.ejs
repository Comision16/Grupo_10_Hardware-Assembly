<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')  %> 


<body>

    <%- include('./partials/header') %> 
    
    <main>
     
            <section class="contenedor">

                <div class="caja"></div><a href="/products/filter?category=Motherboard" class="category_item"
                        category="mother" title="mother"><img src="/images/logos-categorias/mother.bmp"
                            alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=CPU" class="category_item" category="cpu" title="cpu"><img
                            src="/images/logos-categorias/cpu.bmp"
                            alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=Ram"class="category_item" category="ram" title="ram"><img
                            src="/images/logos-categorias/ram.bmp"
                            alt=""></a></div>
                <div class="caja"><a href="/products/filter?category=Fuente" class="category_item"
                        category="fuente" title="fuente"><img
                            src="/images/logos-categorias/fuente.bmp" alt=""></a></div>
                <div class="caja"><a href="/products/filter?category=GPU" class="category_item" category="gpu" title="gpu"><img
                            src="/images/logos-categorias/gpu.bmp"
                            alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=Monitor" class="category_item"
                        category="display" title="display"><img
                            src="/images/logos-categorias/display.bmp" alt=""></a></div>
                <div class="caja"><a href="/products/filter?category=HDD" class="category_item" category="hdd" title="hdd"> <img
                            src="/images/logos-categorias/hdd.bmp"
                            alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=Mouse" class="category_item"
                        category="mouse" title="mouse"><img
                            src="/images/logos-categorias/mouse.bmp" alt=""></a></div>
                <div class="caja"><a href="/products/filter?category=Headset" class="category_item"
                        category="headset" title="headset"><img
                            src="/images/logos-categorias/headset.bmp" alt=""></a></div>
                <div class="caja"><a href="/products/filter?category=Cooling" class="category_item"
                        category="cooling" title="cooling"><img
                            src="/images/logos-categorias/cooling.bmp" alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=Desktop" class="category_item"
                        category="desktop" title="desktop"><img
                            src="/images/logos-categorias/desktop.bmp" alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=Laptop" class="category_item"
                        category="laptop" title="laptop"><img
                            src="/images/logos-categorias/laptop.bmp" alt=""></a></div>
                <div class="caja"> <a href="/products/filter?category=Licencias y seguridad" class="category_item"
                        category="licencias-seguridad" title="licencia-seguridad"><img
                            src="/images/logos-categorias/licenciasyseguridad.bmp" alt=""></a></div>
                <div class="caja"><a href="/products/filter?category=Conectividad" class="category_item"
                        category="conectividad" title="conectividad"><img
                            src="/images/logos-categorias/conectividad.bmp" alt=""></a></div>
            </section>
        
        <div class="desarrollo_producto">
            <aside class="filtros_lateral">
                <form action="">
                    <label for="Categoria_Elegida">
                        <h4>Categoria</h4>
                    </label>
                    <label for="Quitar_filtros">
                        <h3> Quitar Filtros</h3> <span><input type="checkbox" name="Quitar_Filtros"
                                value="Quitar Filtros"></span>
                    </label>
                    <label for="Mayor_precio">
                        <h3> Mayor Precio</h3> <span><input type="checkbox" name="Mayor_precio"
                                value="Mayor Precio"></span>
                    </label>
                    <label for="Menor_precio">
                        <h3>Menor Precio</h3><span><input type="checkbox" name="Menor_precio"
                                value="Menor Precio"></span>
                    </label>
                    <label for="Mas_populares">
                        <h3> Populares</h3> <span><input type="checkbox" name="Mas_populares"
                                value="Mas Populares"></span>
                    </label>

                </form>
            </aside>
            <% products.forEach(({id,name,image,price}) => { %>
                <div class="tarjeta-producto">
                    <section class="img-tarjeta">
                        <img src="/images/<%= image %>" alt="">
                    </section>
                    <section class="valores-tarjeta">
                        <h2 class="nombre"><%= name %></h2>
                        <h2 class="precio"> $<%= toThousand(price) %></h2>
                    </section>
                    <a href="/products/detail/<%= id%>" class="boton">ver producto</a>
                </div>
             
            <% }) %>


        </div>
    </main>
    
    <%- include('./partials/footer') %> 

</body>

</html>