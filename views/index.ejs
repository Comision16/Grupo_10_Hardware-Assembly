<body>

    <%- include('./partials/header') %> 
    
    <main>
        <div class="cuadro_categorias">
            <div class="producto"><a href=""><img src="/images/logos-categorias/mother.bmp" alt=""></a></div>
            <div class="producto"><a href="/products/filter?section=procesador"><img src="/images/logos-categorias/cpu.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/ram.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/fuente.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/hdd.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/gpu.bmp" alt=""></a></div>
            <div class="producto"><a href="/products/filter?section=cooler"><img src="/images/logos-categorias/cooling.bmp" alt=""></a></div>
            <div class="producto"><a href="/products/filter?section=monitor"><img src="/images/logos-categorias/display.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/teclados.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/mouse.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/headset.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/conectividad.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/licenciasyseguridad.bmp" alt=""></a>
            </div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/desktop.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/laptop.bmp" alt=""></a></div>
            <div class="producto"><a href=""><img src="/images/logos-categorias/USB.bmp" alt=""></a></div>

        </div>
        <div class="desarrollo_producto">
            <aside class="filtros_lateral">
                <form action="">
                    <label for="Categoria_Elegida">
                        <h4>Categoria</h4>
                    </label>
                    <label for="Quitar_filtros">
                        <h3> Quitar Filtros</h3> <span><input type="checkbox" name="Quitar_Filtros"
                                value="Quitar Filtros"></span>
                    </label>
                    <label for="Mayor_precio">
                        <h3> Mayor Precio</h3> <span><input type="checkbox" name="Mayor_precio"
                                value="Mayor Precio"></span>
                    </label>
                    <label for="Menor_precio">
                        <h3>Menor Precio</h3><span><input type="checkbox" name="Menor_precio"
                                value="Menor Precio"></span>
                    </label>
                    <label for="Mas_populares">
                        <h3> Populares</h3> <span><input type="checkbox" name="Mas_populares"
                                value="Mas Populares"></span>
                    </label>

                </form>
            </aside>
            <% products.forEach(({id,name,image,price}) => { %>
                <div class="tarjeta-producto">
                    <section class="img-tarjeta">
                        <img src="/images/<%= image %>" alt="">
                    </section>
                    <section class="valores-tarjeta">
                        <h2 class="nombre"><%= name %></h2>
                        <h2 class="precio"> $<%= toThousand((price).toFixed(0)) %></h2>
                    </section>
                    <a href="/products/detail/<%= id%>" class="boton">ver producto</a>
                </div>
             
            <% }) %>


        </div>
    </main>
    <footer>
        <section class="logos_redes">
            <nav class="logos"><a href=""> <i class="fa-brands fa-facebook"></i></a>
                <a href=""> <i class="fa-brands fa-instagram"></i></a>
                <a href=""> <i class="fa-brands fa-twitter"></i></a>
                <a href=""> <i class="fa-brands fa-twitch"></i></a>
                <a href=""> <i class="fa-brands fa-linkedin"></i></a>
                <a href=""> <i class="fa-brands fa-google-play"></i> </a>
            </nav>
        </section>
        <section class="logo_pagina">
            <img src="" alt="">
        </section>
        <section>
            <p class="terminos_condiciones"><a href="terminos&condiciones">Terminos&Condiciones</a></p>
        </section>
    </footer>
</body>

</html>