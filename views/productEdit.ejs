<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head')  %>

<body>
 
        <%- include('./partials/header')  %>
    

    <main class="home_main_register">

        <section class="register_main_section">
            
        
            <h1 class="form_title">Editar producto</h1>
    
    
            <form action="" class="form" method="POST">
    

                
            <div class="form_box">
                <label class="form_label" for="nombre">Nombre del producto:</label>
                <input class="form_input" type="text" id="nombre" name="name" value="<%=product.name%>">
                <small class="form_text_error">El nombre es obligatorio</small>
            </div>
            <div class="form_box">
                <label class="form_label" for="marca">Marca:</label>
                <input class="form_input" type="text" id="marca" name="marca" value="<%=product.marca%>">
                <small class="form_text_error">Coloca la marca de tu producto</small>
            </div>

            <div class="form_box">
                <label class="form_label" for="modelo">Modelo:</label>
                <input class="form_input" type="text" id="modelo" name="modelo" value="<%=product.modelo%>">
                <small class="form_text_error">Coloca el modelo de tu producto</small>
            </div>
            <div class="form_box">
                <label class="form_label" for="price">Precio:</label>
                <input class="form_input" type="number" id="price" name="price" value="<%=product.price%>">
                <small class="form_text_error">Coloca un precio a tu producto</small>
            </div>
            <div class="form_box">
                <label class="form_label" for="discount">Descuento:</label>
                <input class="form_input" type="number" id="discount" name="discount" value="<%=product.discount%>">
                <small class="form_text_error">seleccione un Descuento a tu producto</small>
            </div>
            <div class="form_box">
                <label class="form_label" for="section">Coloca una secci√≥n:</label>
                <select name="section" id="section">
                     <% brands.forEach(brand => { %>
                        <option value="<%=brand%>" <%= product.brand === brand && 'selected'%> > <%=brand%> </option>
                     
                    <% }) %>
                </select>
            </div>
               <div>
                <button><a href="/">Cancelar</a></button>
                <button type="submit">Guardar</button>
               </div>
            </form>
         
    </section>
                
        </main >

    <footer></footer>

</body>

</html>